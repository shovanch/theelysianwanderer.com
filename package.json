{
  "name": "the-elysian-wanderer",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "submodule-init": "git submodule sync --recursive && git submodule update --init --recursive --remote",
    "dev": "pnpm run submodule-init && pnpm run sync-content && next dev --turbo",
    "build:local": "next build --turbo && pnpm run generate-pagefind",
    "build": "bash scripts/vercel-build.sh",
    "build:turbo": "pnpm run sync-content && next build --turbo && pnpm run generate-pagefind",
    "start": "next start",
    "lint": "npx oxlint src/ --quiet && eslint src/ --quiet",
    "lint:fix": "npx oxlint src/ --fix && eslint src/ --fix",
    "format": "prettier --write 'src/*/**/*.{ts,tsx,js,jsx}'",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "generate-pagefind": "pagefind --verbose --site .next --output-path .next/static/chunks/pagefind",
    "sync-content": "node scripts/sync-content.js",
    "prepare": "husky"
  },
  "browserslist": "defaults, not ie <= 11",
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@radix-ui/react-dialog": "^1.1.15",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "motion": "^12.23.28",
    "next": "^16.1.1",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "reading-duration": "^1.1.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "unist-util-visit": "^5.0.0",
    "yet-another-react-lightbox": "^3.28.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/hast": "^3.0.4",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/parser": "^8.51.0",
    "@vercel/analytics": "^1.6.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-oxlint": "^1.37.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pagefind": "^1.4.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "sharp": "0.34.5",
    "typescript-eslint": "^8.51.0",
    "zx": "^8.8.5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "npx oxlint --fix",
      "prettier --write"
    ]
  }
}
